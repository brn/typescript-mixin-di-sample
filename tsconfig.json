    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": false,
    "baseUrl": "./",
    "alwaysStrict": true,
    "lib": ["dom", "es5", "es6", "es2016", "es2017"]
